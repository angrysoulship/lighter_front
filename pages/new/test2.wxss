/* pages/new/test2.wxss */
.mainView {
  width: 100%;
  height: 100%;
}

.bodyView {
  position: relative;
  margin: 200rpx 6rpx;
  padding: 6rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
text {
  color: #848484;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.dateAndWeather {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 90%;
  margin: 30rpx;
}

.card {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 30rpx;
  width: 90%;
  height: fit-content;
  min-height: 150px;
  border-radius: 8px;
  border: solid 1px;
  border-color: #FF7779;
  padding: 12rpx;
}

.emojiCircle {
  position: absolute;
  top: 30px;
  width: 80px;
  height: 80px;
  border: #FF7779 solid 3px;
  border-radius: 100%;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.emojiImage {
  height: 85%;
  width: 85%;

}

textarea {
  caret-color: #FF7779;
  text-align: center;
}

.textarea-wrp {
  margin: 24rpx 0;
  color: #848484;
}

.angry {
  width: 20px;
  height: 20px;
  
}

