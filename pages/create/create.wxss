.mainView {
 background-color: var(--color-purple);
 width: full;
 height: 100%;
}

.bodyView {
  margin-top: 350rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.titles {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.centerTitle {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-beige);
  margin-bottom: 8rpx;
}
.engTitle {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  align-items: center;
  justify-content: center;
  color: var(--color-beige);
  margin-bottom: 50rpx;
  font-weight: 300;
  font-size: smaller;
}

.scrollView {
  width: 100%;
  white-space: nowrap; 
  margin-bottom: 50rpx;
}

.tab-on {
  background-color: var(--color-darkPurple);
  border-radius: 20px;
}

.emojiInfo {
  width: 250px;
  height: 150px;
}

.emojiScroll {
  display: inline-flex;
}

.emojiComponent {
  width: 150rpx;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.emojiImage {
  width: 120rpx;
  height: 120rpx;
  padding: 10rpx;
  margin: 4rpx 10rpx;
}
.cnName {
  font-size: small;
  color: var(--color-beige);
  margin-top: 10rpx;
}

.engName {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: x-small;
  color: var(--color-beige);
  opacity: 0.8;
  
}
.emojiBorder {
  width: 80px;
  height: 80px;
  margin-top: -100rpx;
  border-radius: 20px;
  background-color: var(--color-darkPurple);
  /* border: 2px solid var(--color-beige); */
  display: flex;
  align-items: center;
  justify-content: center;
}

.dateAndWeather {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: 10rpx 40rpx 40rpx 40rpx;
  color: var(--color-beige);
  font-size: small;
}

.card {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 30rpx;
  width: 90%;
  height: fit-content;
  min-height: 150px;
  border-radius: 8px;
  border: solid 2px;
  border-color:var(--color-beige);
  background-color: var(--color-beige);
  padding: 12rpx;
}

.emojiImageChoosen {
  height: 85%;
  width: 85%;
}

.emojiLabel {
  margin-top: 25rpx;
  color: var(--color-purple);
  font-weight: 500;
}

.engEmojiLabel {
  color: var(--color-purple);
  font-size: smaller;
}

textarea {
  caret-color: var(--color-purple);
  text-align: center;
}

.textarea-wrp {
  margin: 24rpx 0;
  color: var(--color-purple);
}

.back-btn {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  color: var(--color-beige);
  cursor: pointer;
  margin-bottom: 8rpx;
  margin-left: 40rpx;
}

.backIcon {
  width: 50rpx;
  height: 50rpx;
}

.dateSelect {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}

.picker{
  margin-left: 6rpx;
  /* background-color: var(--color-beige); */
  border: 1px solid var(--color-beige);
  border-radius: 8px;
  min-width: 200rpx;
  width: fit-content;
  height: 30rpx;
  font-size: 12px;
  text-align: center;
  color: var(--color-beige);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.actionIcon {
  height: 60rpx; 
  width: 60rpx;
}