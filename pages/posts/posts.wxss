.mainView {
width: 100%;
height: 100%;
display: flex;
justify-content: center;
align-items: center;
}

.cards {
  width: 100%;
  padding: 6rpx;
  margin: 6rpx;
  
}
text {
  color: #848484;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.dateAndWeather {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 90%;
  margin: 30rpx;
}

.card-main {
  margin: 30rpx;
  padding: 12rpx;
  width: 90%;
  height: 180px;
  border-radius: 8px;
  border: solid 1px;
  border-color: #FF7779;
}