.userView {
  margin: 20rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.centerTitle {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #848484;
  margin-bottom: 50rpx;
}

.userAvatar {
  width: 60px;
  height: 60px;
  margin-top: -100rpx;
  border: #7a7676 1px;
  border-radius: 100%;
  background-color: rgb(248, 247, 247);
  display: flex;
  align-items: center;
  justify-content: center;
}

.profileCard {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 60rpx;
  width: 90%;
  height: fit-content;
  min-height: 80px;
  border-radius: 8px;
  border: solid 1px;
  border-color: #f1eaea;
  padding: 12rpx;
  box-shadow: 0 5rpx rgba(0, 0, 0, 0.15);
}

