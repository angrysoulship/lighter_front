.reportView {
  margin: 20rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.centerTitle {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #848484;
  margin-bottom: 50rpx;
}

.scrollView {
  width: 100%;
  white-space: nowrap; 
  margin-bottom: 50rpx;
}

.tab-on {
  border-bottom: 6rpx solid #FFC95A !important;
}

.emojiScroll {
