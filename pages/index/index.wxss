/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

/* landingPage */
.landingPages {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.landingPage {
  width: 750rpx;
  height: 1300rpx;
}

.loginBtn {
  background-color: var(--color-beige);
  color: var(--color-purple);
  border-radius: 18px;
  width: 250rpx;
  text-align: center;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 70rpx;
  opacity: 0.8;
}

.downBtn {
 position: fixed;
 bottom: 160rpx;
 width: 60rpx;
 height: 60rpx;
}

/* card view */
.addBtn {
  width: 120rpx;
  height: 120rpx;
}

.viewBtns {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx;
  width: 750rpx;
}

.viewIcon {
  width: 107rpx;
  height: 107rpx;
  margin: 0rpx 40rpx;
}

.calendarCard {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.listsCards {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: auto;
  margin-top: 100rpx;
}

text {
  color: var(--color-purple);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.dateAndWeather {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: 30rpx;
  font-size: small;
}

.card {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.cardBody {
  padding: 12rpx;
  width: 680rpx;
  min-height: 280rpx;
  height: fit-content;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: var(--color-beige);
}

.emojiImage {
  width: 100rpx;
  height: 100rpx;
  padding: 4rpx;
  margin: 4rpx 10rpx;
}
.emojiLabel {
  color: var(--color-purple);
  font-size: medium;
}

.postText {
  font-size: small;
  color: var(--color-purple);
  opacity: 0.8;
}

.cardEdits {
  margin: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-end;
  width: 90%;
}
.editIcon {
  width: 50rpx;
  height: 50rpx;
}

.weatherIcon {
  height: 60rpx; 
  width: 60rpx;
}